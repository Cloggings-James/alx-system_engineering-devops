#!/bin/bash

# Check if the script is run with root privileges
if [ "$(id -u)" -ne 0 ]; then
    echo "Please run this script with sudo or as root."
    exit 1
fi

# Modify the hosts file to change localhost IP address
sed -i 's/^127.0.0.1.*localhost/127.0.0.2 localhost/g' /etc/hosts

# Modify the hosts file to change facebook.com IP address
sed -i 's/^.*facebook.com/8.8.8.8 facebook.com/g' /etc/hosts

echo "Hosts file has been updated successfully."

