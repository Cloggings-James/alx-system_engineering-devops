#!/usr/bin/env bash
# This script configures the localhost and facebook.com IP addresses in /etc/hosts

# Backup the original /etc/hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Replace localhost IP address
sudo sed -i 's/^127.0.0.1[[:space:]]\+localhost$/127.0.0.2 localhost/' /etc/hosts

# Replace facebook.com IP address
sudo sed -i 's/^.*[[:space:]]\+facebook.com$/8.8.8.8 facebook.com/' /etc/hosts

